<Window x:Class="PdfHandler.UI.Views.AddFavoriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="お気に入りに追加"
        Width="450"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 表示名 -->
        <TextBlock Grid.Row="0" 
                   Text="表示名:" 
                   FontWeight="Bold" 
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" 
                 x:Name="NameTextBox" 
                 Padding="5"
                 FontSize="13"
                 Height="30"
                 VerticalContentAlignment="Center"/>

        <!-- フォルダパス -->
        <TextBlock Grid.Row="3" 
                   Text="フォルダパス:" 
                   FontWeight="Bold" 
                   Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" 
                   x:Name="PathText" 
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   Padding="5"
                   MaxHeight="60"/>

        <!-- ボタン -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="追加" 
                    Width="80" 
                    Height="32" 
                    Margin="0,0,10,0"
                    FontSize="13"
                    IsDefault="True"
                    Click="AddButton_Click"/>
            <Button Content="キャンセル" 
                    Width="80" 
                    Height="32"
                    FontSize="13"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
