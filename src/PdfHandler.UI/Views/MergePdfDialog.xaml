<Window x:Class="PdfHandler.UI.Views.MergePdfDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDFファイルの結合"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 説明 -->
        <TextBlock Grid.Row="0" 
                   Text="結合するファイルの順序を調整してください。"
                   Margin="0,0,0,10"/>

        <!-- ファイルリスト -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="FileListBox"
                         Grid.Column="0"
                         SelectionMode="Single"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Index}" 
                                           Width="30" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FileName}" 
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- 順序変更ボタン -->
                <StackPanel Grid.Column="1" 
                            Margin="10"
                            VerticalAlignment="Center">
                    <Button Content="▲ 上へ" 
                            Width="80" 
                            Height="30"
                            Margin="0,0,0,10"
                            Click="MoveUpButton_Click"/>
                    <Button Content="▼ 下へ" 
                            Width="80" 
                            Height="30"
                            Margin="0,0,0,10"
                            Click="MoveDownButton_Click"/>
                    <Button Content="削除" 
                            Width="80" 
                            Height="30"
                            Click="RemoveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 保存先 -->
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="保存先:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="OutputPathTextBox" 
                         Grid.Column="0"
                         IsReadOnly="True"
                         Padding="5"
                         VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" 
                        Content="参照..." 
                        Width="80" 
                        Height="30"
                        Margin="10,0,0,0"
                        Click="BrowseButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- ファイル名 -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="ファイル名:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="FileNameTextBox" 
                     Padding="5"/>
        </StackPanel>

        <!-- 実行ボタン -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="結合実行" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="MergeButton_Click"
                    FontWeight="Bold"/>
            <Button Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
